<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserHttpServlet</servlet-name>
        <servlet-class>org.example.demo.servlet.UserHttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHttpServlet</servlet-name>
        <url-pattern>/api/v1/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleHttpServlet</servlet-name>
        <servlet-class>org.example.demo.servlet.RoleHttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleHttpServlet</servlet-name>
        <url-pattern>/api/v1/roles/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginHttpServlet</servlet-name>
        <servlet-class>org.example.demo.servlet.LoginHttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHttpServlet</servlet-name>
        <url-pattern>/api/v1/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutHttpServlet</servlet-name>
        <servlet-class>org.example.demo.servlet.LogoutHttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutHttpServlet</servlet-name>
        <url-pattern>/api/v1/logout</url-pattern>
    </servlet-mapping>
</web-app>